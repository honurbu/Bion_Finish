    <br />
    <br />
    @Html.Label("Blog Yazısı")
    @Html.TextBoxFor(x => x.BlogWrite, new { @class = "form-control" })

    <br />    <br />
    <br />  
    <br />
    <br />
    <br />
    @Html.Label("Resim Url")
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
    <br />
    <br />
    <br />
    <br />  


    <br />
    <br />

    <button class="btn btn-info" id="btn1">Blogu Kaydet</button>

