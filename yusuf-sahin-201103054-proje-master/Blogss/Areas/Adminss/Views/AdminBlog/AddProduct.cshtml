    Layout = "~/Areas/Adminss/Views/Shared/View.cshtml";
}

@using (Html.BeginForm("AddProduct", "AdminBlog", FormMethod.Post))
{
    @Html.Label("Blog Başlığı")
    @Html.TextBoxFor(x => x.BlogTitle, new { @class = "form-control" })


